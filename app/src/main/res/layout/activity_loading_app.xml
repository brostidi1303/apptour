<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7e5f0"
    tools:context=".LoadingApp">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_speed="3"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="80dp"
        app:lottie_rawRes="@raw/loadapp1"></com.airbnb.lottie.LottieAnimationView>

    <Button
        android:layout_below="@+id/txt_Content"
        android:id="@+id/btnLoading"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:background="@drawable/btn_loading"
        android:text="Get Started"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white">

    </Button>

    <TextView
        android:id="@+id/txt_Loading"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Welcome to AppTour"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The use of traveling is to regulate imagination with reality, and instead of thinking of how things may be, see them as they are - Samuel Johnson"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/txt_Loading"
        android:layout_margin="25dp"
        android:textAlignment="center"
        />



</RelativeLayout>